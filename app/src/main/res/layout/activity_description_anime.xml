<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/background">



    <ImageView
        android:id="@+id/img_item_desc_grid"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="1dp"
        android:scaleType="centerCrop"
        tools:src="@color/colorAccent"/>

    <TextView
        android:id="@+id/tv_item_desc_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/judul"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/horizontal_20"
        android:layout_marginStart="@dimen/horizontal_20"
        android:layout_marginBottom="@dimen/horizontal_8"
        android:layout_marginEnd="@dimen/horizontal_20"
        android:layout_marginRight="@dimen/horizontal_20"/>

</LinearLayout>