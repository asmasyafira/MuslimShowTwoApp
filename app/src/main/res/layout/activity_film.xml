<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/film_card_view"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/margin_horizontal_8"
    android:layout_marginRight="@dimen/margin_horizontal_8"
    android:layout_marginTop="@dimen/margin_horizontal_4"
    android:layout_marginBottom="@dimen/margin_horizontal_4"
    app:cardCornerRadius="@dimen/margin_horizontal_4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/background">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_card_anime"
            android:layout_width="130dp"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@color/colorPrimary" />

        <TextView
            android:id="@+id/tv_name_film"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/horizontal_16"
            android:layout_marginTop="@dimen/horizontal_16"
            android:layout_marginRight="@dimen/margin_horizontal_8"
            android:layout_marginBottom="@dimen/horizontal_16"
            android:layout_toEndOf="@id/img_card_anime"
            android:layout_toRightOf="@id/img_card_anime"
            android:text="@string/Name"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_name_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name_film"
            android:layout_marginLeft="@dimen/horizontal_20"
            android:layout_marginRight="@dimen/horizontal_16"
            android:layout_marginBottom="@dimen/horizontal_8"
            android:layout_toEndOf="@id/img_card_anime"
            android:layout_toRightOf="@id/img_card_anime"
            android:maxLines="3"
            android:text="@string/description" />

        <Button
            android:id="@+id/btn_open_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name_desc"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="14dp"
            android:layout_marginBottom="@dimen/horizontal_16"
            android:layout_marginTop="@dimen/horizontal_8"
            android:layout_marginEnd="@dimen/horizontal_32"
            android:layout_marginRight="@dimen/horizontal_32"
            android:layout_toEndOf="@+id/img_card_anime"
            android:layout_toRightOf="@+id/img_card_anime"
            android:background="@color/colorPrimaryDark"
            android:text="@string/open"
            android:textColor="@android:color/white"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>